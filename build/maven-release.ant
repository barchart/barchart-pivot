<project default="maven" basedir="./..">

	<echo message="basedir : ${basedir}" />

	<target name="maven">
		<exec executable="mvn">
			<arg value="validate" />
			<arg value="release:prepare" />
			<arg value="release:perform" />
			<arg value="--activate-profiles" />
			<arg value="clean,update,patch,release" />
			<arg value="--define" />
			<arg value="resume=false" />
		</exec>
	</target>

</project>
